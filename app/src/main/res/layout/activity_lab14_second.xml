<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Lab14SecondActivity">

    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Вторая активность"
        android:textAlignment="center"
        android:textColor="@color/colorBlack"
        android:textSize="48sp"/>

    <EditText
        android:id="@+id/edit_text1"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/edit_text2"
        android:background="@color/colorPink"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"/>

    <EditText
        android:id="@+id/edit_text2"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv"
        app:layout_constraintStart_toEndOf="@id/edit_text1"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/colorPink"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/button_ok"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/edit_text1"
        app:layout_constraintBottom_toTopOf="@id/button_cancel"
        android:text="OK"
        android:textAllCaps="false"
        android:textSize="48sp"/>

    <Button
        android:id="@+id/button_cancel"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/button_ok"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Cancel"
        android:textAllCaps="false"
        android:textSize="48sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>